<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Bege"
    android:orientation="vertical"
    android:weightSum="1">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/topUserDetails"
        android:layout_alignParentTop="true"
        android:background="#fffffbe9"
        android:padding="30dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/topAvatarDetails"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Your avatar is: "
            android:id="@+id/textView2"
            android:layout_gravity="center_horizontal" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/avatar1"
            android:id="@+id/circleAvatar"
            android:layout_gravity="center_horizontal" />
    </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:id="@+id/topAvatarDescription"
            android:layout_gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Large Text"
                android:id="@+id/levelName" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/levelDiscrip"
                android:text="Aqui vou  procurar"
                android:layout_gravity="center" />

        </LinearLayout>


    </LinearLayout>


    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:max="500"
        android:progress="200"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:id="@+id/progressBarU"
        android:layout_below="@+id/topUserDetails"
        android:progressDrawable="@drawable/custom_progressbar"
        />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bottomUserDetails"
        android:layout_marginLeft="30dp"
        android:layout_below="@+id/progressBarU"
        android:layout_marginTop="30dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textAlignment="center">

            <TextView
                android:id="@+id/usename"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:textColor="#ff5c3022"
                android:text="Username:"
                android:textSize="14sp"
                android:textStyle="bold"

                />

            <TextView
                android:id="@+id/usernameU"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ff5c3022"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="5dp"
                android:text="User"
                android:textSize="14sp"
                android:textStyle="normal"

                />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textAlignment="center">

            <TextView
                android:id="@+id/email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:textColor="#ff5c3022"
                android:text="Email:"
                android:textSize="14sp"
                android:textStyle="bold"

                android:textAlignment="center" />

            <TextView
                android:id="@+id/emailU"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ff5c3022"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="5dp"
                android:text="123@gmail.com"
                android:textSize="14sp"
                android:textStyle="normal"

                />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textAlignment="center">

            <TextView
                android:id="@+id/points"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:textColor="#ff5c3022"
                android:text="Points:"
                android:textSize="14sp"
                android:textStyle="bold"

                />

            <TextView
                android:id="@+id/pointsU"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ff5c3022"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="5dp"
                android:text="34"
                android:textSize="14sp"
                android:textStyle="normal"

                />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:textColor="#ff5c3022"
                android:text="Level:"
                android:textSize="14sp"
                android:textStyle="bold"

                />

            <TextView
                android:id="@+id/levelU"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ff5c3022"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="5dp"
                android:text="1"
                android:textSize="14sp"
                android:textStyle="normal"

                />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/answeredQuestions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:textColor="#ff5c3022"
                android:text="Answered Questions:"
                android:textSize="14sp"
                android:textStyle="bold"

                />

            <TextView
                android:id="@+id/answeredQuestionsU"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ff5c3022"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="5dp"
                android:text="34"
                android:textSize="14sp"
                android:textStyle="normal"

                />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/answeredWrong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:textColor="#ff5c3022"
                android:text="Answered Wrong:"
                android:textSize="14sp"
                android:textStyle="bold"

                />

            <TextView
                android:id="@+id/answeredWrongU"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ff5c3022"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="5dp"
                android:text="34"
                android:textSize="14sp"
                android:textStyle="normal"

                />

        </TableRow>

    </TableLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/userElements"
        android:layout_below="@+id/bottomUserDetails">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Your Elements: "
            android:id="@+id/txvElements"
            android:layout_gravity="top|center_horizontal"
            android:textAlignment="center"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:visibility="gone" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/imageView1"
                android:src="@drawable/level1s"
                android:layout_marginLeft="15dp"
                android:visibility="gone" />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/imageView2"
                android:src="@drawable/level2s"
                android:layout_marginLeft="5dp"
                android:visibility="gone" />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/imageView3"
                android:src="@drawable/level3s"
                android:layout_marginLeft="5dp"
                android:visibility="gone" />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/imageView4"
                android:src="@drawable/level4s"
                android:layout_marginLeft="5dp"
                android:visibility="gone" />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/imageView5"
                android:src="@drawable/level5s"
                android:layout_marginLeft="5dp"
                android:visibility="gone" />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/imageView6"
                android:src="@drawable/level6s"
                android:layout_marginLeft="5dp"
                android:visibility="gone" />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/imageView7"
                android:src="@drawable/level7s"
                android:layout_marginLeft="5dp"
                android:visibility="gone" />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/imageView8"
                android:src="@drawable/level8s"
                android:layout_marginLeft="5dp"
                android:visibility="gone" />
        </TableRow>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Challenges Completed: "
            android:id="@+id/txvchallenges"
            android:layout_gravity="top|center_horizontal"
            android:textAlignment="center"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:visibility="gone" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/imageView9"
                android:src="@drawable/level9s"
                android:layout_marginLeft="15dp"
                android:visibility="gone" />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/imageView10"
                android:src="@drawable/level10s"
                android:layout_marginLeft="5dp"
                android:visibility="gone" />
        </TableRow>


    </TableLayout>


</RelativeLayout>