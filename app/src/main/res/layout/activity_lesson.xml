<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.kelly.logeasysummerresearch.LessonActivity"
    android:id="@+id/relativeLayoutLesson"
    android:background="@drawable/backgroundlevel1">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:id="@+id/linearLayoutFirst"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:background="#ff192030">

        <ImageView
            android:layout_width="145dp"
            android:layout_height="20dp"
            android:id="@+id/imvPoints2"
            android:src="@drawable/points" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="123"
                android:id="@+id/txtPoints"
                android:textColor="@color/Branco" />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:id="@+id/linearLayoutMiddle"
        android:layout_above="@+id/linearLayoutBottom"
        android:layout_below="@+id/linearLayoutFirst"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="70dp"
        android:layout_marginRight="5dp">

        <FrameLayout
            android:id="@+id/sample_content_fragmentlesson"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2" />

        <ImageView
            android:layout_width="120dp"
            android:layout_height="160dp"
            android:id="@+id/imageViewAvatar"
            android:src="@drawable/avatar22"
            android:layout_gravity="bottom|left" />


    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayoutBottom"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="10dp">

        <ImageButton
            android:layout_width="116dp"
            android:layout_height="34dp"
            android:id="@+id/btnLevels"
            android:background="@drawable/levelscore"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="40dp" />

        <ImageButton
            android:layout_width="116dp"
            android:layout_height="34dp"
            android:id="@+id/btnPlay"
            android:onClick= "OnClick"
            android:layout_gravity="left"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="40dp" />



    </RelativeLayout>

</RelativeLayout>
