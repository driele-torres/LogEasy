<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.kelly.logeasysummerresearch.InfoActivity"
    android:background="#ffffe48f">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="305dp"
        android:layout_height="60dp"
        android:id="@+id/layoutTopLoginUser"
        android:background="@drawable/topinformation"
        android:layout_centerHorizontal="true"
        android:nestedScrollingEnabled="false" />

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layoutQuizCenter"
        android:background="#64ffffff"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_below="@+id/layoutTopLoginUser"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_above="@+id/listViewBackButton">

        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/scrollView"
            android:background="#ffffffff">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/info_credits"
                android:id="@+id/txtCreditos"
                android:layout_alignParentTop="true"
                android:textAlignment="center"
                android:typeface="sans"
                android:textColor="#ff1b2232"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                android:gravity="top|center_horizontal" />
        </ScrollView>

    </RelativeLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listViewBackButton"
        android:layout_alignParentBottom="false"
        android:gravity="center_horizontal"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/layoutBottomLoginUser">
        <Button
            android:layout_width="116dp"
            android:layout_height="34dp"
            android:id="@+id/btnBackStart"
            android:singleLine="false"
            android:layout_gravity="bottom|right"
            android:gravity="bottom|center_horizontal"
            android:background="@drawable/buttomhin10" />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="305dp"
        android:layout_height="40dp"
        android:id="@+id/layoutBottomLoginUser"
        android:layout_centerHorizontal="true"
        android:background="@drawable/bottomcreateuser"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>
