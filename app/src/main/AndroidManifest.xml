<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.kelly.logeasyresearch">

    <application android:allowBackup="true"
        android:icon="@drawable/blueicon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >

        <activity
            android:name=".ActivityLogin"
            android:label="@string/app_name"
            android:windowSoftInputMode="adjustResize|stateVisible"
            android:screenOrientation="portrait"
            android:configChanges="orientation|keyboardHidden" >
        </activity>
        <activity
            android:name=".ActivityLesson"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:configChanges="orientation|keyboardHidden" >
        </activity>
        <activity
            android:name=".ActivityQuiz"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:configChanges="orientation|keyboardHidden" >
        </activity>
        <activity
            android:name=".ActivityHint"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:configChanges="orientation|keyboardHidden">
        </activity>
        <activity
            android:name=".ActivityCreate_User"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:configChanges="orientation|keyboardHidden" >
        </activity>
        <activity
            android:name=".ActivityChoose_Player"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:configChanges="orientation|keyboardHidden" >
        </activity>
        <activity
            android:name=".ActivityLogEasy"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:configChanges="orientation|keyboardHidden" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ActivityLevels"
            android:label="@string/title_activity_levels"
            android:screenOrientation="portrait"
            android:configChanges="orientation|keyboardHidden" >
        </activity>
        <activity
            android:name=".ActivityInfo"
            android:label="@string/title_activity_info"
            android:screenOrientation="portrait"
            android:configChanges="orientation|keyboardHidden" >
        </activity>

    </application>

</manifest>
